@{
    ViewBag.Title = "Registration";
}

<h2>Registration</h2>
<form action="/Account/Registration" method="post">
    <div class="form-group">
        <input class="form-control" type="text" name="name" placeholder="სახელი" />
    </div>

    <div class="form-group">
        <input class="form-control" type="text" name="surName" placeholder="გვარი" />
    </div>

    <div class="form-group">
        <input class="form-control" type="text" name="birthdate" placeholder="დაბადების თარიღი" />
    </div>

    <div class="form-group">
        <input class="form-control" type="text" name="dog_breed" placeholder="ძაღლის ჯიში" />
    </div>

    <div class="form-group">
        <input class="form-control" type="email" name="mail" placeholder="მაილი" />
    </div>

    <div class="form-group">
        <input class="form-control" type="password" name="password" placeholder="პაროლი" />
    </div>

    <div class="form-group">
        <input class="form-control" type="password" name="repeatPassword" placeholder="გაიმეორეთ პაროლი" />
    </div>

    <div class="form-group">
        <input class="form-control btn btn-success" type="submit" placeholder="რეგისტრაცია" />
    </div>
</form>
<p style="color:red">@ViewBag.error</p>
